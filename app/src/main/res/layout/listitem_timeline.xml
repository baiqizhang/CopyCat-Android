<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:id="@+id/listitem_timeline_imageView"
        android:src="@android:drawable/ic_menu_gallery" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/listitem_timeline_userButton"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/sym_def_app_icon"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFFFF"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="User AAA"
            android:id="@+id/textView"
            android:gravity="center_vertical"
            android:textColor="#dcf3f3f3"
            android:layout_weight="1.00" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/listitem_timeline_button4" />

        <Button
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:text="Like"
            android:id="@+id/listitem_timeline_button3" />

        <Button
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:text="shar"
            android:id="@+id/listitem_timeline_button2" />

    </LinearLayout>

</LinearLayout>